{
    "compilerOptions": {
        "outDir": "./built/",
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "esnext",
        "esModuleInterop": true,
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
